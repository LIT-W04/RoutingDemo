@model RoutingDemo.Models.SearchViewModel

<div class="row">
    <div class="col-md-6 col-md-offset-3 well">
        <form action="/search">
            <input type="text" value="@Model.SearchQuery" class="form-control" name="query" placeholder="Search here..." />
            <br />
            <button class="btn btn-primary">Search</button>
        </form>
    </div>
</div>
@if (!String.IsNullOrEmpty(Model.SearchQuery))
{
    <h1>You searched for @Model.SearchQuery</h1>
}